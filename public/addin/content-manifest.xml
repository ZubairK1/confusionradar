<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xmlns:ov="http://schemas.microsoft.com/office/taskpaneappversionoverrides"
  xsi:type="ContentApp">
  <Id>c5e8d8f4-9f2c-4b6a-8f3a-2b9c1d7a1234</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Confusion Radar</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Confusion Radar Content Add-in" />
  <Description DefaultValue="Embed the live Confusion Radar widget directly on slides." />
  <IconUrl DefaultValue="https://confusion-radar.onrender.com/assets/icon-32.svg" />

  <Hosts>
    <Host Name="Presentation" />
  </Hosts>

  <DefaultSettings>
    <SourceLocation DefaultValue="https://confusion-radar.onrender.com/widget.html" />
  </DefaultSettings>

  <Permissions>ReadWriteDocument</Permissions>

  <!-- VersionOverrides provide details needed by modern Office clients to load content add-ins -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="VersionOverridesV1_0">
    <Hosts>
      <Host xsi:type="Presentation">
        <DesktopFormFactor>
          <GetStartedPage>
            <Title resid="GetStartedTitle" />
            <Description resid="GetStartedDescription" />
          </GetStartedPage>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    <Resources>
      <bt:Images>
        <bt:Image id="Icon32" DefaultValue="https://confusion-radar.onrender.com/assets/icon-32.svg" />
      </bt:Images>
      <bt:Urls>
        <bt:Url id="WidgetUrl" DefaultValue="https://confusion-radar.onrender.com/widget.html" />
      </bt:Urls>
    </Resources>
  </VersionOverrides>
</OfficeApp>
